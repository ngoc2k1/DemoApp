<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FormatText">
        <item name="android:fontFamily">@font/tirodevanagarisanskrit_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FormatTextViewTiny" parent="FormatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_tiny</item>
