    <style name="FormatTextViewSmall" parent="FormatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>
    <style name="FormatTextViewMedium" parent="FormatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_medium</item>
    </style>

    <style name="FormatTextViewBig" parent="FormatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_big</item>
    </style>
    <style name="FormatTextViewHuge" parent="FormatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_huge</item>
    </style>
    <style name="AllImageButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
